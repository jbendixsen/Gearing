<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textGear"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="3.08"
        />

    <LinearLayout
        android:id="@+id/viewItemFirstGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelFirstSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="1st"
            />

        <TextView
            android:id="@+id/textFirstSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="10"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewItemSecondGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelSecondSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="2nd"
            />

        <TextView
            android:id="@+id/textSecondSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="20"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewItemThirdGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelThirdSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="3rd"
            />

        <TextView
            android:id="@+id/textThirdSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="30"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewItemFourthGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelFourthSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="4th"
            />

        <TextView
            android:id="@+id/textFourthSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="40"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewItemFifthGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelFifthSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="5th"
            />

        <TextView
            android:id="@+id/textFifthSpeed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="50"
            />

    </LinearLayout>


</LinearLayout>